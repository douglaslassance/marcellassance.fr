---
const workGroups = [
  {
    id: 1,
    title: "Spring 2020 x SHIPS",
    description: "An exploration of natural textures and refined forms",
    category: "Collection",
    images: [
      "/works/1-1.jpg",
      "/works/1-2.jpg",
      "/works/1-3.jpg",
      "/works/1-4.jpg",
      "/works/1-5.jpg",
      "/works/1-6.jpg",
    ],
  },
];
---

<section id="works" class="min-h-screen py-16 px-8 bg-[#232e21]">
  <div class="max-w-[900px] mx-auto">
    <h2 class="text-[clamp(2rem,4vw,2.5rem)] mb-6 font-extralight text-center">
      Works
    </h2>
    <hr
      class="w-20 h-0.5 border-0 bg-gradient-to-r from-transparent via-[#f5ead6] to-transparent mx-auto mb-16"
    />
    <div class="flex flex-col gap-20">
      {
        workGroups.map((group) => (
          <article class="flex flex-col gap-8">
            <div class="flex flex-col gap-2 text-center">
              <span class="text-[0.85rem] uppercase tracking-[0.1em] text-[rgba(232,220,200,0.5)] font-medium">
                {group.category}
              </span>
              <h3 class="text-[clamp(1.5rem,3vw,2rem)] font-normal">
                {group.title}
              </h3>
              <p class="text-[0.95rem] text-[rgba(232,220,200,0.7)] leading-relaxed max-w-2xl mx-auto">
                {group.description}
              </p>
            </div>
            <div class="grid grid-cols-[repeat(auto-fit,minmax(320px,1fr))] gap-8">
              {group.images.map((image, index) => (
                <div class="aspect-[3/4] overflow-hidden bg-[rgba(232,220,200,0.05)] border border-[rgba(232,220,200,0.15)] transition-transform duration-300 hover:-translate-y-2">
                  <img
                    src={image}
                    alt={`${group.title} - Image ${index + 1}`}
                    loading="lazy"
                    class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                  />
                </div>
              ))}
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
