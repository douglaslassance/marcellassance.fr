---
const works = [
	{
		id: 1,
		title: "Collection Printemps 2024",
		description: "Une exploration des textures naturelles et des formes épurées",
		category: "Collection"
	},
	{
		id: 2,
		title: "Série Minimaliste",
		description: "L'essence du vêtement réduite à sa plus simple expression",
		category: "Série"
	},
	{
		id: 3,
		title: "Pièces Signature",
		description: "Des créations iconiques qui définissent l'identité de la marque",
		category: "Collection"
	},
	{
		id: 4,
		title: "Collaboration Artisanale",
		description: "Rencontre entre savoir-faire traditionnel et design contemporain",
		category: "Projet Spécial"
	},
	{
		id: 5,
		title: "Collection Automne 2023",
		description: "Harmonie entre confort et élégance dans des tons neutres",
		category: "Collection"
	},
	{
		id: 6,
		title: "Études de Forme",
		description: "Recherches conceptuelles sur la structure et le volume",
		category: "Recherche"
	}
];
---

<section id="works" class="works">
	<div class="container">
		<h2>Créations</h2>
		<div class="grid">
			{works.map((work) => (
				<article class="work-card">
					<div class="work-image">
						<div class="placeholder"></div>
					</div>
					<div class="work-info">
						<span class="category">{work.category}</span>
						<h3>{work.title}</h3>
						<p>{work.description}</p>
					</div>
				</article>
			))}
		</div>
	</div>
</section>

<style>
	.works {
		min-height: 100vh;
		padding: 6rem 2rem;
		background-color: #ffffff;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	h2 {
		font-size: clamp(2.5rem, 5vw, 4rem);
		margin-bottom: 4rem;
		font-weight: 200;
		text-align: center;
	}

	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
		gap: 3rem;
	}

	.work-card {
		display: flex;
		flex-direction: column;
		transition: transform 0.3s ease;
	}

	.work-card:hover {
		transform: translateY(-8px);
	}

	.work-image {
		aspect-ratio: 3 / 4;
		overflow: hidden;
		margin-bottom: 1.5rem;
		background-color: #f0f0f0;
	}

	.placeholder {
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, #e0e0e0 0%, #f5f5f5 100%);
		display: flex;
		align-items: center;
		justify-content: center;
		transition: transform 0.3s ease;
	}

	.work-card:hover .placeholder {
		transform: scale(1.05);
	}

	.work-info {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.category {
		font-size: 0.85rem;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		color: #999;
		font-weight: 500;
	}

	h3 {
		font-size: 1.4rem;
		font-weight: 400;
		margin-bottom: 0.5rem;
	}

	.work-info p {
		font-size: 1rem;
		color: #666;
		line-height: 1.6;
	}
</style>
