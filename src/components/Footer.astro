---
import { Mail, Instagram } from "lucide-astro";

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>Marcel Lassance</h3>
        <p>Paris</p>
      </div>

      <div class="footer-section">
        <h4>Navigation</h4>
        <nav>
          <a href="#home">Home</a>
          <a href="#about">About</a>
          <a href="#works">Works</a>
        </nav>
      </div>

      <div class="footer-section">
        <h4>Contact</h4>
        <p>Paris, France</p>
        <a href="mailto:contact@marcellassance.fr" class="icon-link">
          <Mail size={18} />
          <span>info@marcellassance.fr</span>
        </a>
        <a
          href="https://instagram.com/marcellassance"
          target="_blank"
          rel="noopener noreferrer"
          class="icon-link"
        >
          <Instagram size={18} />
          <span>marcellassance</span>
        </a>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} Marcel Lassance. All rights reserved.</p>
    </div>
  </div>
</footer>

<script>
  document.querySelectorAll('.footer a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const targetId = this.getAttribute('href');
      if (!targetId || targetId === '#') return;
      
      const targetElement = document.querySelector(targetId);
      if (targetElement) {
        const navHeight = 80;
        const targetPosition = targetElement.offsetTop - navHeight;
        
        window.scrollTo({
          top: targetPosition,
          behavior: 'smooth'
        });
      }
    });
  });
</script>

<style>
  .footer {
    background-color: #1d251b;
    color: #e8dcc8;
    padding: 4rem 2rem 2rem;
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer-section h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    font-weight: 300;
  }

  .footer-section h4 {
    font-size: 1rem;
    margin-bottom: 1rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(232, 220, 200, 0.5);
  }

  .footer-section p {
    color: rgba(232, 220, 200, 0.7);
    line-height: 1.8;
  }

  .footer-section a {
    display: block;
    margin-top: 0.5rem;
  }

  .icon-link {
    display: flex !important;
    align-items: center;
    gap: 0.6rem;
  }

  .icon-link :global(svg) {
    flex-shrink: 0;
    display: block;
  }

  .icon-link span {
    line-height: 1;
  }

  nav {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  nav a,
  .footer-section a {
    color: rgba(232, 220, 200, 0.7);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  nav a:hover,
  .footer-section a:hover {
    color: #f5ead6;
  }

  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid rgba(232, 220, 200, 0.15);
    text-align: center;
  }

  .footer-bottom p {
    color: rgba(232, 220, 200, 0.5);
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
