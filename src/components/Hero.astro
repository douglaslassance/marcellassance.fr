---
import { ChevronDown } from "lucide-astro";
---

<section
  id="home"
  class="min-h-screen flex items-center justify-center text-center relative p-8 uppercase bg-cover bg-center bg-no-repeat"
  style="background-image: radial-gradient(ellipse at center, transparent 0%, transparent 30%, rgba(42, 52, 40, 0.6) 70%, #2a3428 100%), linear-gradient(135deg, rgba(42, 52, 40, 0.75) 0%, rgba(56, 68, 56, 0.75) 100%), url('/hero.jpg')"
>
  <div
    class="w-full flex flex-col items-center justify-between min-h-[calc(100vh-4rem)]"
  >
    <div class="flex-1 flex flex-col justify-center items-center mt-12">
      <img src="/logo.svg" alt="Marcel Lassance" class="w-[clamp(300px,50vw,600px)] h-auto" style="filter: brightness(0) saturate(100%) invert(88%) sepia(13%) saturate(446%) hue-rotate(343deg) brightness(98%) contrast(91%);" />
      <p
        class="text-[clamp(1rem,2.5vw,1.5rem)] font-light text-[var(--color-accent)] tracking-[0.15em] uppercase"
      >
        Paris
      </p>
    </div>
    <div class="flex-none flex flex-col items-center gap-12 pb-8">
      <a
        href="#works"
        class="inline-block m-0 px-10 py-4 bg-transparent text-[var(--color-accent)] no-underline text-base font-normal tracking-[0.1em] uppercase border border-[var(--color-accent)] rounded-sm transition-all duration-300 hover:bg-[var(--color-accent)] hover:text-[var(--color-bg)]"
        >View Works</a
      >
      <a
        href="#about"
        class="text-[var(--color-accent)] opacity-70 cursor-pointer transition-opacity duration-300 hover:opacity-100 animate-bounce"
      >
        <ChevronDown size={32} />
      </a>
    </div>
  </div>
</section>

<script>
  document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
    anchor.addEventListener("click", function (e) {
      e.preventDefault();
      const targetId = this.getAttribute("href");
      if (!targetId || targetId === "#") return;

      const targetElement = document.querySelector(targetId);
      if (targetElement) {
        const navHeight = 80;
        const targetPosition = targetElement.offsetTop - navHeight;

        window.scrollTo({
          top: targetPosition,
          behavior: "smooth",
        });
      }
    });
  });
</script>
