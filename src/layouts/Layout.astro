---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Marcel Lassance - Fashion Designer" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Serif:wght@300;400;500&family=Lato:wght@300;400&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --color-text: #e8dcc8;
    --color-bg: #2a3428;
    --color-accent: rgba(232, 220, 200, 0.5);
    --color-link: #d4a574;
    --color-link-hover: #e8b98a;
    --font-main: "Lato", -apple-system, BlinkMacSystemFont, sans-serif;
    --font-serif: "Noto Serif", Georgia, serif;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-main);
    color: var(--color-text);
    background-color: var(--color-bg);
    line-height: 1.6;
  }

  h1 {
    font-family: var(--font-serif);
    font-weight: 300;
    letter-spacing: 0.02em;
  }

  h2,
  h3 {
    font-family: var(--font-main);
    font-weight: 300;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }
</style>
